{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "构建",
            "type": "shell",
            "command": "${workspaceFolder}\\build.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "运行",
            "type": "process",
            "command": "${workspaceFolder}\\bin\\main.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}